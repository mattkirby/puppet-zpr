#!/usr/bin/env bash
set -e

cmd=$1
mount_path='<%= @backup_dir %>'
cmd_path='<%= @permitted_commands %>'
check_mount=$(stat -f -L -c %T ${mount_path}/${cmd} | sed 's/\///')
cmd_="${cmd_path}/${cmd}"
export zpr_rsync_cmd=$(cat $cmd_)
create_lock=$(lockfile-create -r 0 ${mount_path}/${cmd}/zpr_rsync &> /dev/null ; echo $?)

cmd_empty() {
  if [[ -z $cmd ]]
  then
    echo "No command was provided"
    exit 1
  fi
}

path_is_nfs() {
  if [[ $check_mount != 'nfs' ]]
  then
    echo "Requested volume is not mounted"
    exit 2
  fi
}

check_lockfile() {
  if [[ $create_lock -ne 0 ]]
  then
    echo "A lock for $cmd exists"
    exit 3
  fi
}

run_cmd() {
  /bin/bash -c \
  "$(cat $cmd_ | tr -d '\\')"
}

remove_lock() {
  rm -f ${mount_path}/${cmd}/zpr_rsync.lock
}

main() {
  cmd_empty
  path_is_nfs
  check_lockfile
  run_cmd
  remove_lock
}

trap "remove_lock ; exit 255" SIGINT SIGQUIT SIGTERM
trap "remove_lock" EXIT

main
